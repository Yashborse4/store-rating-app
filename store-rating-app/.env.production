# Production Environment Configuration for Frontend
# Update these values with your production settings

# API Configuration
# Replace with your production API URL
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_API_VERSION=v1

# App Configuration
REACT_APP_APP_NAME=StoreRater
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_DEBUG_MODE=false

# Security
REACT_APP_ENABLE_HTTPS_ONLY=true
REACT_APP_SESSION_TIMEOUT=3600000

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_CODE_SPLITTING=true

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0

# PWA Configuration
REACT_APP_PWA_ENABLED=true
REACT_APP_PWA_NAME=StoreRater
REACT_APP_PWA_SHORT_NAME=StoreRater
