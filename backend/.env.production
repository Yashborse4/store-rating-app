# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
PORT=8080
NODE_ENV=production

# Database Configuration
# Update these with your production database credentials
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=store_rating_production
DB_USER=your_db_username
DB_PASSWORD=your_secure_db_password

# JWT Configuration
# Generate a strong, unique secret for production
# You can use: openssl rand -base64 32
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRE=24h

# CORS Origins (comma-separated list)
# Update with your frontend URLs
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Email Configuration (if using email features)
EMAIL_HOST=your_smtp_host
EMAIL_PORT=587
EMAIL_USER=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdomain.com

# Logging
LOG_LEVEL=error
LOG_TO_FILE=true

# Health Check
HEALTH_CHECK_SECRET=your_health_check_secret
